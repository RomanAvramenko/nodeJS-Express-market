<h1>Add courses</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required />
    <label for="title">Course Name</label>
    <span class="helper-text" data-error="enter the name"></span>
  </div>

  <div class="input-field">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
    />
    <label for="price">Course Price</label>
    <span class="helper-text" data-error="enter the price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required />
    <label for="img">image URL</label>
    <span class="helper-text" data-error="enter the image URL"></span>
  </div>

  <input type="hidden" name="_csrf" value={{csrf}} />

  <button class="btn btn-primary">Add Course</button>
</form>